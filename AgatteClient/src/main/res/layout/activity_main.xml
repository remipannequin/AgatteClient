<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.agatteclient.DayCardView"
        android:id="@+id/day_card_view"
        android:layout_alignLeft="@+id/text"
        custom:textHeight="15dp"
        android:layout_below="@+id/text"
        android:layout_above="@+id/button_doPunch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/punch_button"
        android:id="@+id/button_doPunch"
        android:onClick="doPunch"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/day_card_view"
        android:layout_alignRight="@+id/day_card_view"
        android:singleLine="true" />

</RelativeLayout>
